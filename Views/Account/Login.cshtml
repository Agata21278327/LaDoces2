@model LoginViewModel
<table class="table">

    <div class="row">
        <div class="col-9 col-md-9 col-lg-9">
            <h4 class="text-danger opacity-50">Login</h4>
            <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                <hr class="bg-danger opacity-25 " />
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group text-danger opacity-50 ">
                    <label asp-for="UserName" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group text-danger opacity-50">
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8 mt-2">
                        <input type="submit" class="btn btn-danger opacity-50 mt-3" value="Logar" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <footer class="fixed-bottom">
        <div class="container opacity-50">
        </div>
    </footer>
    </div>
    </footer>
</table>