<div class="dropdown">
    <a class="btn btn-rosa rounded-pill dropdown-toggle shadow border border-light" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">

        Itens
    </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>

                <a class="dropdown-item" asp-controller="Item" asp-action="List" style="color:black" asp-route-categoria="@categoria.Nome">@categoria.Nome</a>

            </li>
        }
        <li class="dropdown-divider"></li>
        <li>

            <a class="dropdown-item" asp-controller="Item" asp-action="List" asp-route-categoria="" style="color:black">Todos os Itens</a>
        </li>
    </ul>
</div>